@model IEnumerable<Affilitest.Models.SequenceUrl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var hasLoadMore = (bool)ViewBag.hasLoadMore;
    var numberOfUrl = ViewBag.numberOfUrl;
}
@Html.Partial("_HeaderNav")
<h2>Quản lý danh sách urls click</h2>
<a class="btn btn-primary" href="@Url.Action("DeleteAll")">@string.Format("Xóa tất cả ({0} urls)", numberOfUrl)</a>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Device)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            Ngày đẩy lên
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Device)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserID)
        </td>
        <td>
            @item.Date.ToString("dd-MM-yyyy HH:mm:ss")
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.SequenceID })
        </td>
    </tr>
}

</table>
<p><a href="@Url.Action("index", new { size = Model.Count() })" class="btn btn-info @(hasLoadMore?"":"hide")">Xem Thêm...</a></p>
