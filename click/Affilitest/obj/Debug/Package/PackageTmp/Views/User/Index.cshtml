@model IEnumerable<Affilitest.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Người dùng</h3>
@Html.Partial("_HeaderNav")
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            Tổng số Click tối đa
        </th>
        <th>
            Số click đã làm
        </th>
        <th>
            Quyền
        </th>
        <th>
            Số Url tối đa
        </th>
        <th>
            Token
        </th>
        @*<th>
            Số click trong ngày hôm nay
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalOfClick)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentOfClick)
        </td>
        <td>
            @if(item.Role){
                <label>Quản trị</label>
            }
            else
            {
                <label>Bình thường</label>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Token)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.NumberClick)
        </td>*@
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.UserID }) |
            @Html.ActionLink("Tạo Token", "CreateToken", new { id=item.UserID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.UserID })
        </td>

    </tr>
}

</table>
